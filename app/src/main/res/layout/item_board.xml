<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_back_board"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/back_board"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="택배 박스 공구합니다!"
        android:textSize="13sp"
        android:fontFamily="@font/suite_medium"
        app:layout_constraintTop_toTopOf="@id/iv_back_board"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@id/iv_back_board"
        android:layout_marginStart="21dp"
        />

    <TextView
        android:id="@+id/tv_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/iv_back_board"
        android:layout_marginStart="21dp"
        android:textColor="@color/gray7"
        android:layout_marginTop="8dp"
        android:text="10분 전"
        android:textSize="10sp"
        />

    <ImageView
        android:id="@+id/iv_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_created_at"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:background="@drawable/bar_board"
        android:layout_marginTop="10dp"
        android:layout_marginStart="4dp"
        />

    <TextView
        android:id="@+id/tv_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/iv_bar"
        android:layout_marginStart="4dp"
        android:textColor="#777777"
        android:layout_marginTop="8dp"
        android:text="익명"
        android:textSize="10sp"
        />

    <ImageView
        android:id="@+id/iv_like_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/like_icon"
        app:layout_constraintTop_toTopOf="@id/iv_back_board"
        android:layout_marginTop="37.94dp"
        app:layout_constraintEnd_toStartOf="@id/tv_like_icon"
        android:layout_marginEnd="3dp"
        />

    <TextView
        android:id="@+id/tv_like_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1개"
        android:textSize="10sp"
        android:textColor="#FF012C"
        app:layout_constraintTop_toTopOf="@id/iv_back_board"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@id/iv_comment_icon"
        android:layout_marginEnd="7.64dp"
        />

    <ImageView
        android:id="@+id/iv_comment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_icon"
        app:layout_constraintTop_toTopOf="@id/iv_back_board"
        android:layout_marginTop="37.94dp"
        app:layout_constraintEnd_toStartOf="@id/tv_comment_icon"
        android:layout_marginEnd="4.64dp"
        />

    <TextView
        android:id="@+id/tv_comment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5개"
        android:textSize="10sp"
        android:textColor="#777777"
        app:layout_constraintEnd_toEndOf="@id/iv_back_board"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_back_board"
        android:layout_marginTop="38dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>