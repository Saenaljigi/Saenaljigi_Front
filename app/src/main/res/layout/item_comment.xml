<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent">

    <!-- Comment Writer -->
    <TextView
        android:id="@+id/tv_comment_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종이2"
        android:textSize="13sp"
        android:fontFamily="@font/suite_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="58dp"

        />

    <!-- Background Image -->
    <ImageView
        android:id="@+id/iv_background_comment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/background_comment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_comment_writer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- Comment Content -->
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="네 가능해요"
        android:textColor="@color/black12"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="@id/iv_background_comment"
        app:layout_constraintTop_toTopOf="@id/iv_background_comment"
        app:layout_constraintEnd_toEndOf="@id/iv_background_comment"
        />

    <!-- Comment Created Time -->
    <TextView
        android:id="@+id/tv_comment_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:35"
        android:textColor="@color/gray7"
        android:textSize="9sp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/iv_background_comment"
        app:layout_constraintTop_toBottomOf="@id/tv_comment_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
