<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <corners android:radius="18dp" />
            <solid android:color="#01000000" /> <!-- 1% 투명도 -->
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp" />
            <corners android:radius="18dp" />
            <solid android:color="#02000000" /> <!-- 2% 투명도 -->
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="3dp" android:right="3dp" android:bottom="3dp" android:left="3dp" />
            <corners android:radius="18dp" />
            <solid android:color="#03000000" /> <!-- 3% 투명도 -->
        </shape>
    </item>

    <!-- Background (이 부분이 동적으로 변경될 부분) -->
    <item android:id="@+id/layer_background">
        <shape>
            <solid android:color="#ffffff" /> <!-- 기본 배경 흰색 -->
            <corners android:radius="18dp" />
        </shape>
    </item>
</layer-list>
