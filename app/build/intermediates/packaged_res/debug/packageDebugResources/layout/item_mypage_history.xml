<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mypage_history_box"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:background="@drawable/mypage_rectangle"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/suite_semibold"
        android:text="2024년 9월 20일"
        android:textColor="#808080"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mypage_history_box"
        app:layout_constraintTop_toTopOf="@+id/mypage_history_box" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/suite_semibold"
        android:text="석식"
        android:textColor="#363636"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/mypage_history_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/suite_semibold"
        android:text="+1장"
        android:textColor="#363636"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_total"
        app:layout_constraintEnd_toEndOf="@+id/mypage_history_box" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/suite_semibold"
        android:text="잔여 식권  109장"
        android:textColor="#808080"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_history_box"
        app:layout_constraintEnd_toEndOf="@+id/mypage_history_box" />
</androidx.constraintlayout.widget.ConstraintLayout>