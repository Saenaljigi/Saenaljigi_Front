<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageFragment"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="120dp"
            android:text="안녕하세요,"
            android:textColor="#121212"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="23012345님"
            android:textColor="#121212"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hello" />

        <ImageView
            android:id="@+id/under_line"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/mypage_line1"
            app:layout_constraintEnd_toEndOf="@+id/tv_student_id"
            app:layout_constraintStart_toStartOf="@+id/tv_student_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_student_id" />

        <ImageView
            android:id="@+id/menu1_box"
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="27dp"
            android:src="@drawable/home_shadow1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/under_line" />

        <ImageView
            android:id="@+id/menu2_box"
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="27dp"
            android:src="@drawable/home_shadow1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu1_box" />

        <ImageView
            android:id="@+id/menu3_box"
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="27dp"
            android:src="@drawable/home_shadow1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu2_box" />

        <ImageView
            android:id="@+id/menu4_box"
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="27dp"
            android:src="@drawable/home_shadow1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu3_box" />

        <ImageView
            android:id="@+id/menu1_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:src="@drawable/check_icon"
            app:layout_constraintBottom_toBottomOf="@+id/menu1_box"
            app:layout_constraintStart_toStartOf="@+id/menu1_box"
            app:layout_constraintTop_toTopOf="@+id/menu1_box" />

        <ImageView
            android:id="@+id/menu2_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:src="@drawable/fork_icon"
            app:layout_constraintBottom_toBottomOf="@+id/menu2_box"
            app:layout_constraintStart_toStartOf="@+id/menu2_box"
            app:layout_constraintTop_toTopOf="@+id/menu2_box" />

        <ImageView
            android:id="@+id/menu3_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:src="@drawable/help_icon"
            app:layout_constraintBottom_toBottomOf="@+id/menu3_box"
            app:layout_constraintStart_toStartOf="@+id/menu3_box"
            app:layout_constraintTop_toTopOf="@+id/menu3_box" />

        <ImageView
            android:id="@+id/menu4_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:src="@drawable/setting_icon"
            app:layout_constraintBottom_toBottomOf="@+id/menu4_box"
            app:layout_constraintStart_toStartOf="@+id/menu4_box"
            app:layout_constraintTop_toTopOf="@+id/menu4_box" />

        <TextView
            android:id="@+id/menu1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="상벌점 조회"
            android:textColor="#121212"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/menu1_box"
            app:layout_constraintStart_toEndOf="@+id/menu1_icon"
            app:layout_constraintTop_toTopOf="@+id/menu1_box" />

        <TextView
            android:id="@+id/menu2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="식권 사용 내역"
            android:textColor="#121212"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/menu2_box"
            app:layout_constraintStart_toEndOf="@+id/menu2_icon"
            app:layout_constraintTop_toTopOf="@+id/menu2_box" />

        <TextView
            android:id="@+id/menu3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="자주 묻는 질문"
            android:textColor="#121212"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/menu3_box"
            app:layout_constraintStart_toEndOf="@+id/menu3_icon"
            app:layout_constraintTop_toTopOf="@+id/menu3_box" />

        <TextView
            android:id="@+id/menu4_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="환경 설정"
            android:textColor="#121212"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/menu4_box"
            app:layout_constraintStart_toEndOf="@+id/menu4_icon"
            app:layout_constraintTop_toTopOf="@+id/menu4_box" />

        <TextView
            android:id="@+id/del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="11dp"
            android:text="탈퇴하기"
            android:textSize="13sp"
            android:textColor="#9F9F9F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="11dp"
            android:text="로그아웃"
            android:textSize="13sp"
            android:textColor="#9F9F9F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>